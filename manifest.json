{
  "manifest_version": 3,
  "name": "LinkedIn Queens Solver",
  "version": "1.0.0",
  "description": "Automatically solves the LinkedIn Queens game and displays the solution",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["solver.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
